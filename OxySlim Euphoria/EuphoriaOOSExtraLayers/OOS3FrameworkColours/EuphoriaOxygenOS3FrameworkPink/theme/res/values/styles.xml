<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DeviceDefault.Resolver" parent="@*android:style/Theme.Material.Light">
        <item name="android:colorBackground">@*android:color/white</item>
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ffE91E63</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:colorControlActivated">?android:colorControlHighlight</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>
    <style name="Theme.DeviceDefault.ResolverDark" parent="@*android:style/Theme.Material">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ffE91E63</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:listPreferredItemPaddingStart">?android:dialogPreferredPadding</item>
        <item name="android:listPreferredItemPaddingEnd">?android:dialogPreferredPadding</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:colorControlActivated">?android:colorControlHighlight</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>
    <style name="Widget.Material.DatePicker" parent="@android:style/Widget.Material">
        <item name="@android:headerBackground">#ffE91E63</item>
        <item name="@android:calendarViewShown">true</item>
        <item name="@android:datePickerMode">calendar</item>
    </style>
</resources>
